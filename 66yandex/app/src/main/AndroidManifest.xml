<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sergek.yandex2">
    <uses-permission android:name="android.permission.INTERNET">
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE">

    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Yandex2">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:label="@string/app_name"
            android:noHistory="false"
            android:configChanges="orientation|screenSize"

            android:theme="@style/Theme.Yandex2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StocksActivity"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:configChanges="orientation|screenSize"
            android:label="Details">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>


        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />



        <activity android:name=".Crypto_activity"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:configChanges="orientation|screenSize"
            android:label="Crypto chart">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>


        </activity>
    </application>




</manifest>